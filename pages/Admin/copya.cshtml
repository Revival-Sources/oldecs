<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Admin Panel - Copy Asset</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <style>
        
        body {
            font-family: Arial, sans-serif;
            background-color: #222;
            color: #fff;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #333;
            padding: 20px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            align-items: center;
            margin: 0;
        }

        .sidebar li {
            margin-bottom: 10px;
        }

        .sidebar a {
            text-decoration: none;
            color: #fff;
            display: block;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #555;
        }

        .dashboard {
            margin-left: 299px;
            padding: 20px;
        }

        .dashboard h2 {
            margin-bottom: 20px;
        }
        .totalusers {
            margin-left: 299px;
            padding: 20px;
            background-color: rgb(0,100,0);
        }

        .totalusers h2 {
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        
        .form-group input[type="text"],
        .form-group input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #fff;
            background-color: #444;
            color: #fff;
            border-radius: 5px;
        }
        
        .form-group input[type="submit"] {
            width: 100%;
            padding: 10px;
            border: none;
            background-color: #555;
            color: #fff;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }
        
        .form-group input[type="submit"]:hover {
            background-color: #777;
        }

        #AssetID {
            width: 650px;
            left: 668px;
            top: 210px;
            position: absolute;
        }
        #creator {
            width: 650px;
            left: 668px;
            top: 140px;
            position: absolute;
        }
        #Submit {
            width: 300px;
            left: 850px;
            top: 260px;
            position: absolute;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <ul>
            <li>
                <a href="/admin">Dashboard</a>
            </li>
            <li>
                <a href="/admin/users">Users</a>
            </li>
            <li>
                <a href="/admin/asset/copy">Copy Asset</a>
            </li>
            <li>
                <a href="/admin/catalog/manage">Catalog Manager</a>
            </li>
            <li>
                <a href="/admin/asset/create">Create Item</a>
            </li>
            <li>
                <a href="/admin/asset/update">Update Item</a>
            </li>
            <li>
                <a href="/admin/asset/delete">Delete Item</a>
            </li>
        </ul>
    </div>
    <div class="form-group">
        <input class="id" id="AssetID" type="text" placeholder="ASSET ID HERE, EX: 119916949">
        <input class="creator" id="creator" type="text" placeholder="CREATOR NAME HERE, EX: Life">
        <input class="submit" id="Submit" type="submit">
    </div>

    <script>
        const assetid = document.querySelector(".id")
        const creator = document.querySelector(".creator")
        const assetname = document.querySelector(".name")
        const submit = document.querySelector(".submit")

        submit.addEventListener('click', function() {
           fetch(`/api/admin/copy/asset/${assetid.value}?creator=${creator.value}`, {method: "POST"})
           .then(response => response.json())
           .then((data) => {
                window.location.href = `/admin/asset/edit/${data.message}`
           })
        })
    </script>
</body>
</html>